{
  "cli": {
    "version": ">= 16.6.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "channel": "development",
      "environment": "development",
      "android": { "buildType": "apk" }
    },

    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "channel": "production",
      "environment": "production",
      "android": { "buildType": "app-bundle" }
    }
  },
  "submit": {
    "production": {}
  }
}
