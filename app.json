{
  "expo": {
    "name": "Coursify",
    "slug": "coursify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "backgroundColor": "#ffffff",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "userInterfaceStyle": "light",
      "backgroundColor": "#ffffff",
      "supportsTablet": true,
      "bundleIdentifier": "com.coursify"
    },
    "android": {
      "userInterfaceStyle": "light",

      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0CA190"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.coursify",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "plugins": [
      ["react-native-bootsplash", { "assetsDir": "assets/bootsplash" }],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Poppins-Bold.ttf",
            "./assets/fonts/Poppins-Medium.ttf",
            "./assets/fonts/Poppins-SemiBold.ttf",
            "./assets/fonts/Poppins-Regular.ttf"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photo library to allow you to upload a profile picture."
        }
      ],
      "expo-system-ui"
    ],
    "extra": {
      "eas": {
        "projectId": "ec7016ab-779a-4890-9bd5-82f0644e6b3d"
      }
    }
  }
}
