{
  "expo": {
    "name": "Coursify",
    "slug": "coursify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "backgroundColor": "#ffffff",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "userInterfaceStyle": "light",
      "backgroundColor": "#ffffff",
      "supportsTablet": true,
      "bundleIdentifier": "com.coursify",
      "googleServicesFile": "./configs/GoogleService-Info.plist"
    },
    "android": {
      "userInterfaceStyle": "light",
      "googleServicesFile": "./configs/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0CA190"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.coursify",
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "plugins": [
      ["react-native-bootsplash", { "assetsDir": "assets/bootsplash" }],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Poppins-Bold.ttf",
            "./assets/fonts/Poppins-Medium.ttf",
            "./assets/fonts/Poppins-SemiBold.ttf",
            "./assets/fonts/Poppins-Regular.ttf"
          ]
        }
      ],
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "buildReactNativeFromSource": true,
            "forceStaticLinking": ["RNFBApp", "RNFBFirestore"]
          },
          "android": {
            "usesCleartextTraffic": true,
            "extraMavenRepos": [
              "../../node_modules/@notifee/react-native/android/libs"
            ]
          }
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.1014904992083-n7qdaul3pvou9pb0hmqj02e471aorvp1"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photo library to allow you to upload a profile picture."
        }
      ],
      "expo-system-ui"
    ],
    "extra": {
      "eas": {
        "projectId": "ec7016ab-779a-4890-9bd5-82f0644e6b3d"
      }
    }
  }
}
