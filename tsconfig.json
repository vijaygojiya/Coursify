{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": false,
    "module": "esnext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strict": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "__mocks__/**/*",
    "./src/**/*",
    "index.d.ts",
    ".eslint.config.js",
    "jest.setup.js",
    "jest.config.js",
    "babel.config.js",
    "index.js",
    "react-native.config.js",
    "jest.setup.ts",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["**/node_modules", "**/Pods"]
}
