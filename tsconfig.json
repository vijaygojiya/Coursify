{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": false,
    "module": "esnext",
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": [
    "__mocks__/**/*",
    "./src/**/*",
    "index.d.ts",
    ".eslint.config.js",
    "jest.setup.js",
    "jest.config.js",
    "babel.config.js",
    "index.js",
    "react-native.config.js",
    "jest.setup.ts",
    "declarations.d.ts"
  ],
  "exclude": ["node_modules", "_", "android", "ios"]
}
